<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head') %>
    <link href="/css/users/registerStyle.css" rel="stylesheet">
    <title>Register</title>
</head>

<body>
    <section>
        <div class="main-container">
            <div class="logo-user">
                <i class="fa-solid fa-bandage"></i>
            </div>
            <div class="register-login">
                <a href="/user/login">
                    <h2 class="login-title">Ingresar</h2>
                </a>
                <a href="/user/register">
                    <h2 class="register-title">Registrarse</h2>
                </a>
            </div>
            <form action="/user/register" method="POST" enctype="multipart/form-data">
                <div class="usuario">
                    <label for="username">Nombre de usuario</label>
                    <input type="text" placeholder="Nombre de usuario" name="username"
                        value="<%=locals.oldData ? oldData.username : null%>"
                        class="<%=locals.errors && errors.username ? 'invalid-field' : null%>">
                    <% if (locals.errors && errors.username) { %>
                    <div class="error">
                        <%=errors.username.msg%>
                    </div>
                    <% } %>
                </div>
                <div class="email">
                    <label for="text">E-mail</label>
                    <input type="text" placeholder="E-mail" name="email"
                    value="<%=locals.oldData ? oldData.email : null%>"
                        class="<%=locals.errors && errors.email ? 'invalid-field' : null%>">
                    <% if (locals.errors && errors.email) { %>
                    <div class="error">
                        <%=errors.email.msg%>
                    </div>
                    <% } %>
                </div>
                <div class="password">
                    <label for="password">Contraseña</label>
                    <input type="password" placeholder="Contraseña" name="password"
                        class="<%=locals.errors && errors.password ? 'invalid-field' : null%>">
                    <% if (locals.errors && errors.password) { %>
                    <div class="error">
                        <%=errors.password.msg%>
                    </div>
                    <% } %>
                </div>
                <div class="confirm-password">
                    <label for="confirm_password">Confirmar contraseña</label>
                    <input type="password" placeholder="Confirmar contraseña" name="confirm_password"
                        class="<%=locals.errors && errors.confirm_password ? 'invalid-field' : null%>">
                    <% if (locals.errors && errors.confirm_password) { %>
                    <div class="error">
                        <%=errors.confirm_password.msg%>
                    </div>
                    <% } %>
                </div>
                <div class="user-image">
                    <label for="user_image">Subir una imagen de perfil</label>
                    <input type="file" accept=".jpg, .png, .jpeg" name="user_image" id="user_image">
                    <% if (locals.errors && errors.user_image) { %>
                        <div class="error">
                            <%=errors.user_image.msg%>
                        </div>
                    <% } %>
                </div>
                <div class="terminos-condiciones">
                    <input type="checkbox" name="terminos">
                    <label for="terminos">Acepto los <a href="/register">Terminos y condiciones</a></label>
                    <% if (locals.errors && errors.terminos) { %>
                    <div class="error">
                        <%=errors.terminos.msg%>
                    </div>
                    <% } %>
                </div>
                <div class="boton-submit">
                    <button type="submit">Registrarse</button>
                </div>
                <div class="container-signin">
                    <p>¿Ya tenes una cuenta? <a href="/login">Iniciar sesion</a>.</p>
                </div>
            </form>
        </div>
    </section>
</body>

</html>